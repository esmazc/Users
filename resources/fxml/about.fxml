<?import javafx.scene.text.*?>

<GridPane hgap="5.0" vgap="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints prefHeight="100.0" />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <GridPane hgap="5.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Verzija:" GridPane.columnIndex="1" />
            <Label text="O aplikaciji:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <Label text="GitHub repozitorij:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text=" 0.1.0" GridPane.columnIndex="2" />
            <Hyperlink onAction="#linkAction" text="repozitorij" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <HBox spacing="42.0" GridPane.rowIndex="1">
         <children>
            <Label text="O autoru:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextArea prefHeight="76.0" prefWidth="200.0" text="Ime i prezime: Esma Zejnilović&#10;Fakultet: Elektrotehnički fakultet&#10;Smjer: Računarstvo i informatika&#10;Grad: Sarajevo&#10;Država: Bosna i Hercegovina" />
         </children>
      </HBox>
      <ImageView fitHeight="150.0" fitWidth="199.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="2">
         <image>
            <Image url="@../img/ratatouille.png" />
         </image></ImageView>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="3">
        <buttons>
          <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#cancelAction" text="Cancel" />
        </buttons>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
